= javascript_pack_tag 'squirrels/show'
- content_for(:title, t('.title'))

h1.text-3xl.font-bold.mt-3.ml-2
  = t('.title')

= render 'shared/flash_message'

.squirrel.mt-4.flex.justify-between.items-center.mx-auto
  - if params[:friend_num]
    = image_tag "eat_squirrel/#{params[:friend_num]}.png"
  - else
    = image_tag "squirrel/#{current_user.squirrel.number}.png"

.flex.justify-end.items-center.mx-auto
  - unless params[:friend_num]
    .rounded-3xl.border-2.border-gray-400.mr-6.bg-white
      .flex.items-center.justify-centertext-center.text-xl.font-medium.text-gray-700.py-2.px-4
        = t('defaults.current')
        = animal_count(current_user.squirrel.number)
  .acron-count
    .flex.justify-end.px-3.mt-2
      - if current_user.decorate.acorn_active?
        = image_tag 'acron/acron.png', class: 'rounded-full border-2 border-gray-400 w-28 h-28 bg-white', id: 'exist-acorn'
      - else
        = image_tag 'acron/acron.png', class: 'rounded-full border-2 border-gray-400 w-28 h-28 opacity-40 bg-white'
    .flex.justify-end.px-2
      .text-2xl.text-gray-700.font-medium
        = "Ã— #{current_user.acorn.number}"

= render 'confirm'
